---
// ========================================
// SELLERS PAGE
// Services page for property sellers
// Dynamic content from Stratos CRM
// ========================================

import Layout from '../layouts/Layout.astro'
import Hero from '../components/Hero.astro'
import IntroSection from '../components/static-page/layouts/IntroSection.astro'
import ContentBlock from '../components/static-page/layouts/ContentBlock.astro'
import CTABanner from '../components/static-page/layouts/CTABanner.astro'

// Page content utilities
import { getPageContent, hasSection } from '../lib/pages'

const pageTitle = 'Selling Your Property'
const pageDescription = 'Expert guidance and support for selling your property. Get the best price with our experienced team.'

// Fetch sellers page content from Stratos CRM
const pageContent = await getPageContent('sellers')
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <Hero
    headline="Sell Your Property With Confidence"
    description="With expert local knowledge and a proven track record, we'll help you achieve the best possible price for your property."
    ctaText="Get a Free Valuation"
    ctaLink="/valuation"
    backgroundType="image"
    backgroundSrc="https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=1920&q=80"
    overlayOpacity="dark"
    showPhoneButton={false}
  />

  <!-- Intro Section -->
  <IntroSection
    title="Achieve the Best Price for Your Property"
    subtitle="Expert Guidance"
    description="Selling a property is one of the biggest financial decisions you'll make. That's why we take a personalised approach, combining local market expertise with modern marketing strategies to attract the right buyers."
    ctaText="Get a free valuation"
    ctaLink="/valuation"
    leftImageSrc="https://images.pexels.com/photos/1918291/pexels-photo-1918291.jpeg?auto=compress&cs=tinysrgb&w=800"
    leftImageAlt="Stylish home interior"
    rightImageSrc="https://images.pexels.com/photos/2102587/pexels-photo-2102587.jpeg?auto=compress&cs=tinysrgb&w=800"
    rightImageAlt="Beautiful property exterior"
  />

  <ContentBlock
    blockKey="selling_process"
    pageContent={pageContent}
    mediaSrc="https://images.unsplash.com/photo-1582407947304-fd86f028f716?w=1200&q=80"
    mediaAlt="The selling process"
    secondaryMediaSrc="https://images.pexels.com/photos/3935333/pexels-photo-3935333.jpeg?auto=compress&cs=tinysrgb&w=800"
    secondaryMediaAlt="Property consultation"
    title="The Selling Process"
    subtitle="Step by Step"
    description="From the initial valuation to completion, we handle everything. Professional photography, premium portal listings, accompanied viewings, expert negotiation, and sales progression — all designed to get you the best result."
    ctaText="Book a valuation"
    ctaLink="/valuation"
    imagePosition="right"
    overlayStrength="light"
    serviceItems={["Portal Listings", "Accompanied Viewings", "Expert Negotiation"]}
  />  

  <!-- Content Blocks - Alternating Layout -->
  <ContentBlock
    blockKey="our_approach"
    pageContent={pageContent}
    mediaSrc="https://images.unsplash.com/photo-1560518883-ce09059eeffa?w=1200&q=80"
    mediaAlt="Our approach to selling"
    secondaryMediaSrc="https://images.pexels.com/photos/1643384/pexels-photo-1643384.jpeg?auto=compress&cs=tinysrgb&w=800"
    secondaryMediaAlt="Property staging"
    title="Our Approach to Selling"
    subtitle="Expert Guidance"
    description="Selling a property is one of the biggest financial decisions you'll make. That's why we take a personalised approach, combining local market expertise with modern marketing strategies to attract the right buyers and achieve the best price."
    ctaText="Learn more"
    ctaLink="/contact"
    imagePosition="left"
    overlayStrength="light"
    serviceItems={["Free Valuation", "Professional Photography", "Premium Marketing"]}
  />



  <!-- CTA Banner -->
  <CTABanner
    title="Start Your Property Journey Today"
    subtitle="Still exploring? Get in touch for a free consultation or sign up to receive our latest listings — tailored just for you."
    primaryCtaText="Contact Us"
    primaryCtaLink="/contact"
    backgroundType="image"
    backgroundSrc="https://images.pexels.com/photos/5644365/pexels-photo-5644365.jpeg"
    overlayOpacity="medium"
  />   
  <ContentBlock
    blockKey="fees"
    pageContent={pageContent}
    mediaSrc="https://images.unsplash.com/photo-1600596542815-ffad4c1539a9?w=1200&q=80"
    mediaAlt="Our track record"
    secondaryMediaSrc="https://images.pexels.com/photos/1457842/pexels-photo-1457842.jpeg?auto=compress&cs=tinysrgb&w=800"
    secondaryMediaAlt="Successful sale"
    title="Our Track Record"
    subtitle="Results That Speak"
    description="98% asking price achieved, 6 weeks average time to offer, and over 500 properties sold. Our track record speaks for itself. We consistently deliver exceptional results for our clients."
    ctaText="View success stories"
    ctaLink="/about"
    imagePosition="right"
    overlayStrength="light"
    serviceItems={["98% Asking Price", "6 Week Average", "500+ Properties"]}
  />

</Layout>
