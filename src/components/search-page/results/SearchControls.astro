---
// ========================================
// SEARCH CONTROLS
// Sort dropdown, filters badge, view toggle, and map link
// ========================================

import type { SearchControlsProps } from '../types'
import SearchSort from './SearchSort.astro'
import ViewToggle from './ViewToggle.astro'

interface Props extends SearchControlsProps {
  defaultView?: 'grid' | 'list'
  class?: string
}

const {
  activeFiltersCount,
  currentSortBy,
  sortOptions,
  showMapLink = true,
  mapLinkHref = '/search-map',
  defaultView = 'grid',
  class: className = '',
} = Astro.props
---

<div class:list={['search-controls', className]}>
  {activeFiltersCount > 0 && (
    <div class="search-controls__filters-badge">
      <svg class="search-controls__badge-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <polygon points="22 3 2 3 10 12.46 10 19 14 21 14 12.46 22 3"></polygon>
      </svg>
      <span>{activeFiltersCount} active</span>
    </div>
  )}

  <ViewToggle defaultView={defaultView} />

  <a href="/favourites" class="search-controls__link">
    <svg class="search-controls__link-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
    </svg>
    <span>Favourites</span>
  </a>

  {showMapLink && (
    <a href={mapLinkHref} class="search-controls__link">
      <svg class="search-controls__link-icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <polygon points="3 6 9 3 15 6 21 3 21 18 15 21 9 18 3 21"></polygon>
        <line x1="9" y1="3" x2="9" y2="18"></line>
        <line x1="15" y1="6" x2="15" y2="21"></line>
      </svg>
      <span>Map View</span>
    </a>
  )}

  <SearchSort
    currentSortBy={currentSortBy}
    options={sortOptions}
  />
</div>

<style lang="scss">
  @use '../../../styles/pages/search/controls';
</style>
