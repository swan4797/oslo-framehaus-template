---
// ========================================
// SEARCH RESULTS GRID
// Property cards grid layout
// ========================================

import type { Property } from '../../../types/database'
import PropertyCard from '../../properties/cards/PropertyCard.astro'

interface Props {
  properties: Property[]
  source?: string
  class?: string
}

const {
  properties,
  source = 'search_results',
  class: className = '',
} = Astro.props
---

<div class:list={['search-results-grid', className]}>
  {properties.map(property => (
    <PropertyCard
      property={property}
      featured={property.is_featured}
      source={source}
    />
  ))}
</div>

<style lang="scss">
  @use '../../../styles/pages/search/results-grid';
</style>
