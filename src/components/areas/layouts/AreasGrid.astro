---
// ========================================
// AREAS GRID COMPONENT
// Grid layout for displaying area guides
// ========================================

import type { AreaGuide } from '../../../lib/area-guides'
import AreaCard from '../cards/AreaCard.astro'

interface Props {
  areas: AreaGuide[]
  emptyTitle?: string
  emptyMessage?: string
  linkText?: string
}

const {
  areas,
  emptyTitle = 'No Area Guides Available',
  emptyMessage = 'Check back soon for local area guides.',
  linkText = 'View Area Guide',
} = Astro.props
---

<section class="area-guides">
  <div class="area-guides__container">
    {areas.length === 0 ? (
      <div class="area-guides__empty">
        <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/>
          <circle cx="12" cy="10" r="3"/>
        </svg>
        <h2>{emptyTitle}</h2>
        <p>{emptyMessage}</p>
      </div>
    ) : (
      <div class="area-guides__grid">
        {areas.map((area) => (
          <AreaCard area={area} linkText={linkText} />
        ))}
      </div>
    )}
  </div>
</section>

<style lang="scss">
  @use '../../../styles/components/areas/areas-grid';
</style>
