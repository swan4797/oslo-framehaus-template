---
// ========================================
// VIEWING SECTION COMPONENT
// Property viewing request form card
// Used on property details pages
// ========================================

import type { Property } from '../../types/database'
import ViewingForm from '../forms/presets/ViewingForm.astro'

interface Props {
  property: Property
}

const { property } = Astro.props
---

<section class="viewing-section">
  <div class="viewing-section__card">
    <!-- Header -->
    <div class="viewing-section__header">
      <h2 class="viewing-section__title">Get in touch</h2>
      <p class="viewing-section__description">
        Get in touch with us today to arrange a viewing and discover the perfect blend of elegance and convenience.
      </p>
    </div>

    <!-- Form -->
    <div class="viewing-section__form">
      <ViewingForm propertyId={property.id} />
    </div>
  </div>
</section>

<style lang="scss" is:global>
  @use '../../styles/forms/viewing-request-form';
</style>
