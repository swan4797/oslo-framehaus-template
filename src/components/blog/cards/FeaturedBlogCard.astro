---
// ========================================
// FEATURED BLOG CARD COMPONENT
// Two-column layout: image left, content right
// Premium featured article display
// ========================================

interface ArticleCardData {
  article_id: string
  title: string
  slug: string
  excerpt?: string | null
  content?: string | null
  featured_image_url?: string | null
  featured_image_alt?: string | null
  published_at?: string | null
  is_featured?: boolean
  view_count?: number
  categories?: Array<{ category_id?: string; name: string }> | null
  author?: {
    full_name: string
    job_title?: string | null
    profile_photo_url?: string | null
  } | null
}

interface Props {
  article: ArticleCardData
}

const { article } = Astro.props

// Format date
const formatDate = (dateString: string | null | undefined) => {
  if (!dateString) return ''
  const date = new Date(dateString)
  return date.toLocaleDateString('en-GB', {
    day: 'numeric',
    month: 'short',
    year: 'numeric'
  })
}

// Default image if no featured image
const imageUrl = article.featured_image_url || 'https://images.unsplash.com/photo-1486312338219-ce68d2c6f44d?w=800&h=500&fit=crop'
const authorImage = article.author?.profile_photo_url || `https://ui-avatars.com/api/?name=${encodeURIComponent(article.author?.full_name || 'Author')}&size=80&background=FF5A5F&color=fff`

// Calculate reading time
const readingTime = Math.ceil((article.content?.length || 0) / 1500)
---

<article class="featured-card" data-article-id={article.article_id}>
  <a href={`/blog/${article.slug}`} class="featured-card__link">
    <!-- Image Section (Left) -->
    <div class="featured-card__image-wrapper">
      <img
        src={imageUrl}
        alt={article.featured_image_alt || article.title}
        class="featured-card__image"
        loading="eager"
      />

      <!-- Categories on image -->
      {article.categories && article.categories.length > 0 && (
        <div class="featured-card__categories">
          {article.categories.slice(0, 2).map(cat => (
            <span class="featured-card__category">{cat.name}</span>
          ))}
        </div>
      )}
    </div>

    <!-- Content Section (Right) -->
    <div class="featured-card__content">
      <!-- Meta Info -->
      <div class="featured-card__meta">
        <time datetime={article.published_at || ''} class="featured-card__date">
          {formatDate(article.published_at)}
        </time>
        {readingTime > 0 && (
          <span class="featured-card__reading-time">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"/>
              <polyline points="12 6 12 12 16 14"/>
            </svg>
            {readingTime} min read
          </span>
        )}
      </div>

      <!-- Title -->
      <h2 class="featured-card__title">{article.title}</h2>

      <!-- Excerpt -->
      {article.excerpt && (
        <p class="featured-card__excerpt">{article.excerpt}</p>
      )}

      <!-- Footer -->
      <div class="featured-card__footer">
        <!-- Author -->
        {article.author && (
          <div class="featured-card__author">
            <img
              src={authorImage}
              alt={article.author.full_name}
              class="featured-card__author-avatar"
              loading="lazy"
            />
            <div class="featured-card__author-details">
              <span class="featured-card__author-name">{article.author.full_name}</span>
              {article.author.job_title && (
                <span class="featured-card__author-title">{article.author.job_title}</span>
              )}
            </div>
          </div>
        )}

        <!-- Read More Button -->
        <span class="featured-card__btn">
          Read more
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" x2="19" y1="12" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </span>
      </div>
    </div>
  </a>
</article>

<style lang="scss">
  @use '../../../styles/components/blog/featured-blog-card';
</style>
