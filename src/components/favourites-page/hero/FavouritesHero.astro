---
// ========================================
// FAVOURITES HERO
// Hero section with title and subtitle
// ========================================

import type { FavouritesHeroProps } from '../types'
import { defaultHeroConfig } from '../config'

interface Props extends FavouritesHeroProps {
  class?: string
}

const {
  title = defaultHeroConfig.title,
  subtitle = defaultHeroConfig.subtitle,
  class: className = '',
} = Astro.props
---

<div class:list={['favourites-hero', className]}>
  <div class="favourites-hero__background"></div>
  <div class="favourites-hero__content">
    <div class="favourites-hero__container">
      <div class="favourites-hero__icon">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="currentColor">
          <path d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z"/>
        </svg>
      </div>
      <h1 class="favourites-hero__title">{title}</h1>
      {subtitle && (
        <p class="favourites-hero__subtitle">{subtitle}</p>
      )}
      <slot />
    </div>
  </div>
</div>

<style lang="scss">
  @use '../../../styles/variables' as *;
  @use '../../../styles/mixins' as *;

  .favourites-hero {
    position: relative;
    background: linear-gradient(135deg, $accent-coral 0%, #FF7B7F 100%);
    padding: $spacing-10 0;
    overflow: hidden;

    @include md {
      padding: $spacing-12 0;
    }
  }

  .favourites-hero__background {
    position: absolute;
    inset: 0;
    background-image:
      radial-gradient(circle at 20% 50%, rgba(255, 255, 255, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
    opacity: 0.6;
  }

  .favourites-hero__content {
    position: relative;
    z-index: 1;
  }

  .favourites-hero__container {
    @include container;
    text-align: center;
  }

  .favourites-hero__icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    margin-bottom: $spacing-4;
    color: $bg-white;

    @include md {
      width: 80px;
      height: 80px;

      svg {
        width: 40px;
        height: 40px;
      }
    }
  }

  .favourites-hero__title {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: $font-weight-bold;
    color: $bg-white;
    margin: 0 0 $spacing-3 0;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .favourites-hero__subtitle {
    font-size: clamp(0.9375rem, 2vw, 1.125rem);
    color: rgba(255, 255, 255, 0.9);
    margin: 0;
  }
</style>
