---
// ========================================
// FAVOURITES EMPTY STATE
// Displayed when no favourites exist
// ========================================

import type { FavouritesEmptyStateProps } from '../types'
import { defaultStatesConfig } from '../config'

interface Props extends FavouritesEmptyStateProps {
  class?: string
}

const {
  title = defaultStatesConfig.empty.title,
  message = defaultStatesConfig.empty.message,
  ctaText = defaultStatesConfig.empty.ctaText,
  ctaHref = defaultStatesConfig.empty.ctaHref,
  class: className = '',
} = Astro.props
---

<div class:list={['favourites-state', 'favourites-state--hidden', className]} id="empty-state">
  <div class="favourites-state__icon">
    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
      <path d="M19 14c1.49-1.46 3-3.21 3-5.5A5.5 5.5 0 0 0 16.5 3c-1.76 0-3 .5-4.5 2-1.5-1.5-2.74-2-4.5-2A5.5 5.5 0 0 0 2 8.5c0 2.3 1.5 4.05 3 5.5l7 7Z"/>
    </svg>
  </div>
  <h2 class="favourites-state__title">{title}</h2>
  <p class="favourites-state__message">{message}</p>
  <a href={ctaHref} class="favourites-state__button">
    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <circle cx="11" cy="11" r="8"></circle>
      <path d="m21 21-4.35-4.35"></path>
    </svg>
    {ctaText}
  </a>
</div>

<!-- Styles in centralized _favourites-page.scss -->
