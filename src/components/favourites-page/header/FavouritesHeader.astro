---
// ========================================
// FAVOURITES HEADER
// Shows count and clear all button
// ========================================

interface Props {
  class?: string
}

const { class: className = '' } = Astro.props
---

<div class:list={['favourites-header', 'favourites-state--hidden', className]} id="favourites-header">
  <div class="favourites-header__info">
    <h2 class="favourites-header__count">
      <span id="favourites-count">0</span> saved properties
    </h2>
  </div>
  <button id="clear-all-btn" class="favourites-header__clear" type="button">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <path d="M3 6h18"></path>
      <path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"></path>
      <path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"></path>
    </svg>
    Clear All
  </button>
</div>

<!-- Styles in centralized _favourites-page.scss -->
