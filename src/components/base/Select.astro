---
// ========================================
// SELECT COMPONENT
// Reusable select dropdown with label
// ========================================

export interface SelectOption {
  value: string
  label: string
  disabled?: boolean
}

export interface Props {
  name: string
  id?: string
  label?: string
  placeholder?: string
  options: SelectOption[]
  value?: string
  required?: boolean
  disabled?: boolean
  error?: string
  hint?: string
  size?: 'sm' | 'md' | 'lg'
  class?: string
  selectClass?: string
  [key: string]: any
}

const {
  name,
  id = name,
  label,
  placeholder,
  options,
  value,
  required = false,
  disabled = false,
  error,
  hint,
  size = 'md',
  class: className,
  selectClass,
  ...rest
} = Astro.props

const hasError = Boolean(error)
const describedBy = [
  error && `${id}-error`,
  hint && `${id}-hint`,
].filter(Boolean).join(' ') || undefined
---

<div class:list={['select-group', `select-group--${size}`, hasError && 'select-group--error', className]}>
  {label && (
    <label for={id} class="select-group__label">
      {label}
      {required && <span class="select-group__required" aria-hidden="true">*</span>}
    </label>
  )}

  <div class="select-group__wrapper">
    <select
      id={id}
      name={name}
      required={required}
      disabled={disabled}
      aria-invalid={hasError}
      aria-describedby={describedBy}
      class:list={['select-group__select', selectClass]}
      {...rest}
    >
      {placeholder && (
        <option value="" disabled selected={!value}>{placeholder}</option>
      )}
      {options.map((option) => (
        <option
          value={option.value}
          disabled={option.disabled}
          selected={value === option.value}
        >
          {option.label}
        </option>
      ))}
    </select>

    <svg class="select-group__icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
      <path d="M6 9l6 6 6-6" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
    </svg>
  </div>

  {hint && !error && (
    <p id={`${id}-hint`} class="select-group__hint">{hint}</p>
  )}

  {error && (
    <p id={`${id}-error`} class="select-group__error" role="alert">{error}</p>
  )}
</div>

<style lang="scss" is:global>
  @use '../../styles/components/base/select';
</style>