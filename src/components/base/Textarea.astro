---
// ========================================
// TEXTAREA COMPONENT
// Reusable textarea with label
// ========================================

export interface Props {
  name: string
  id?: string
  label?: string
  placeholder?: string
  value?: string
  required?: boolean
  disabled?: boolean
  readonly?: boolean
  error?: string
  hint?: string
  rows?: number
  minlength?: number
  maxlength?: number
  resize?: 'none' | 'vertical' | 'horizontal' | 'both'
  class?: string
  textareaClass?: string
  [key: string]: any
}

const {
  name,
  id = name,
  label,
  placeholder,
  value,
  required = false,
  disabled = false,
  readonly = false,
  error,
  hint,
  rows = 4,
  minlength,
  maxlength,
  resize = 'vertical',
  class: className,
  textareaClass,
  ...rest
} = Astro.props

const hasError = Boolean(error)
const describedBy = [
  error && `${id}-error`,
  hint && `${id}-hint`,
].filter(Boolean).join(' ') || undefined
---

<div class:list={['textarea-group', hasError && 'textarea-group--error', className]}>
  {label && (
    <label for={id} class="textarea-group__label">
      {label}
      {required && <span class="textarea-group__required" aria-hidden="true">*</span>}
    </label>
  )}

  <textarea
    id={id}
    name={name}
    placeholder={placeholder}
    required={required}
    disabled={disabled}
    readonly={readonly}
    rows={rows}
    minlength={minlength}
    maxlength={maxlength}
    aria-invalid={hasError}
    aria-describedby={describedBy}
    class:list={['textarea-group__textarea', `textarea-group__textarea--resize-${resize}`, textareaClass]}
    {...rest}
  >{value}</textarea>

  {maxlength && (
    <div class="textarea-group__counter">
      <span class="textarea-group__counter-current">0</span>/<span>{maxlength}</span>
    </div>
  )}

  {hint && !error && (
    <p id={`${id}-hint`} class="textarea-group__hint">{hint}</p>
  )}

  {error && (
    <p id={`${id}-error`} class="textarea-group__error" role="alert">{error}</p>
  )}
</div>

<style lang="scss" is:global>
  @use '../../styles/components/base/textarea';
</style>


<script>
  // Character counter functionality
  document.querySelectorAll('.textarea-group').forEach(group => {
    const textarea = group.querySelector('textarea')
    const counter = group.querySelector('.textarea-group__counter-current')

    if (textarea && counter) {
      const updateCounter = () => {
        counter.textContent = textarea.value.length.toString()
      }

      textarea.addEventListener('input', updateCounter)
      updateCounter()
    }
  })
</script>
