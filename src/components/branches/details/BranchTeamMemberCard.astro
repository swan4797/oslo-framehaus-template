---
// ========================================
// BRANCH TEAM MEMBER CARD COMPONENT
// Individual team member card for branch pages
// ========================================

interface TeamMember {
  first_name: string
  last_name: string
  job_title?: string | null
  email?: string | null
  phone?: string | null
  profile_image_url?: string | null
}

interface Props {
  member: TeamMember
}

const { member } = Astro.props
---

<div class="team-member">
  {member.profile_image_url ? (
    <img
      src={member.profile_image_url}
      alt={`${member.first_name} ${member.last_name}`}
      class="team-member__image"
      loading="lazy"
    />
  ) : (
    <div class="team-member__placeholder">
      <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="8" r="5"/>
        <path d="M20 21a8 8 0 1 0-16 0"/>
      </svg>
    </div>
  )}
  <div class="team-member__info">
    <h3 class="team-member__name">{member.first_name} {member.last_name}</h3>
    {member.job_title && (
      <p class="team-member__title">{member.job_title}</p>
    )}
    {member.email && (
      <a href={`mailto:${member.email}`} class="team-member__email">{member.email}</a>
    )}
    {member.phone && (
      <a href={`tel:${member.phone}`} class="team-member__phone">{member.phone}</a>
    )}
  </div>
</div>

<style lang="scss">
  @use '../../../styles/components/branches/branch-team-member-card';
</style>
